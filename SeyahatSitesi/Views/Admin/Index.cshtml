@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using SeyahatSitesi.Models.Class;
@model List<Blog>
<h3>Blog Listesi</h3>
<br />

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.Id</th>
            <th>@x.Baslik</th>
            <th><a href="/Admin/BlogSil/@x.Id" class="btn btn-danger">Sil</a></th>
            <th><a href="/Admin/BlogGetir/@x.Id" class="btn btn-warning">Güncelle</a></th>
            <th><a href="#" class="btn btn-secondary">Detay</a></th>
        </tr>
    }
</table>
<a href="/Admin/YeniBlog/" class="btn btn-primary">Yeni Blog</a>
<br /><br />
